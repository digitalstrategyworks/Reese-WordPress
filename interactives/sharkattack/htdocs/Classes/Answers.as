package Classes {		import flash.display.Sprite;	import flash.events.Event;	import flash.net.URLRequest;	import flash.events.MouseEvent;	import Classes.Utilities.*;					public class Answers extends Sprite {		//variables to pass to quizquestions class		public var answerID:int;		public var answerText:String;		public var answerPoints:int;				public function Answers(i:int, t:String, p:int) {						//define variables 			answerID = i;			answerText = t;			answerPoints = p;						//tell content where to load			this.answer_txt.text = answerText;									//add event listeners for what occurs when a user selects a particular answer			this.addEventListener(MouseEvent.CLICK, answerClick);			this.addEventListener(MouseEvent.MOUSE_OVER, answerOver);			this.addEventListener(MouseEvent.MOUSE_OUT, answerOut);						//make button mode true so that user knows answers are selectable			this.buttonMode = true;			this.mouseChildren = false;						//set over-state visibility to false unless answerOver is fired			qOver_mc.visible = false;				}				public function answerOver(e:MouseEvent):void{			qOver_mc.visible = true;		}				public function answerOut(e:MouseEvent):void{			qOver_mc.visible = false;		}						public function answerClick(e:MouseEvent):void {			//dispatch info to quizquestion class that tells the id and point value of each question			this.dispatchEvent(new CustomEvent("answerMsg", answerID, answerPoints));									}		}	}